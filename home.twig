{% extends "layout.twig" %}

{% block content %}

<!-- Page Content -->
<section class="page  page--home">

	{% include "includes/hero.twig" %}

	<!-- Main Content -->
    <div id="main-scroll" class="main-content">


        <!-- Section: About FDM -->
